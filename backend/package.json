{
  "name": "tiketti-backend",
  "version": "1.0.0",
  "description": "Tikettijärjestelmän backend",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "start": "prisma migrate deploy && node dist/index.js",
    "build": "prisma generate && tsc",
    "test": "jest",
    "db:up": "docker-compose up -d postgres",
    "db:down": "docker-compose stop postgres && docker-compose rm -f postgres",
    "db:start": "docker-compose start postgres",
    "db:stop": "docker-compose stop postgres",
    "db:restart": "docker-compose restart postgres",
    "db:logs": "docker-compose logs -f postgres",
    "db:reset": "prisma migrate reset --force",
    "db:seed": "prisma db seed",
    "db:shell": "docker-compose exec postgres psql -U admin -d esedu_tiketti_db",
    "dev:setup": "npm run db:up && npm run db:reset",
    "dev:server": "nodemon --exec node --loader ts-node/esm src/index.ts",
    "dev": "concurrently \"npm run dev:setup\" \"npm run prisma:studio\" \"npm run dev:server\"",
    "postinstall": "prisma generate",
    "docker:build": "docker-compose build backend",
    "docker:rebuild": "docker-compose build --no-cache backend",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:restart": "docker-compose restart backend",
    "docker:logs": "docker-compose logs -f backend",
    "docker:reset": "npm run docker:down && npm run docker:rebuild && npm run docker:up",
    "docker:shell": "docker-compose exec backend sh",
    "migrate:create": "prisma migrate dev --create-only",
    "migrate:dev": "prisma migrate dev",
    "migrate:deploy": "prisma migrate deploy",
    "migrate:status": "prisma migrate status",
    "migrate:reset": "prisma migrate reset",
    "prod:migrate": "prisma migrate deploy",
    "prod:migrate:status": "prisma migrate status",
    "prod:backup": "echo 'Remember to backup your database before migrations!'",
    "prisma:studio": "prisma studio",
    "prisma:format": "prisma format",
    "prisma:validate": "prisma validate",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@azure/msal-node": "^3.1.0",
    "@langchain/core": "^0.3.42",
    "@langchain/openai": "^0.4.4",
    "@prisma/client": "^6.3.1",
    "@types/express-rate-limit": "^5.1.3",
    "@types/helmet": "^0.0.48",
    "@types/sanitize-html": "^2.13.0",
    "@types/uuid": "^10.0.0",
    "axios": "^1.8.2",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "discord.js": "^14.22.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.0.1",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "jwks-rsa": "^3.1.0",
    "langchain": "^0.3.19",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.11.3",
    "prisma": "^6.3.1",
    "sanitize-html": "^2.14.0",
    "socket.io": "^4.8.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.2.2",
    "uuid": "^11.0.5",
    "winston": "^3.17.0",
    "zod": "^3.24.2",
    "zod-to-json-schema": "^3.24.6"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.8",
    "@types/multer": "^1.4.12",
    "@types/node": "^20.17.17",
    "@types/pg": "^8.10.9",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "nodemon": "^3.0.3",
    "ts-jest": "^29.1.1"
  },
  "prisma": {
    "seed": "node --loader ts-node/esm prisma/seed.ts"
  }
}
