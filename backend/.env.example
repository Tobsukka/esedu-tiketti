# Database Configuration
POSTGRES_USER=admin
POSTGRES_PASSWORD=admin123
POSTGRES_DB=esedu_tiketti_db

# Prisma Database URL (p√§ivitetty portti)
DATABASE_URL="postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@localhost:5434/${POSTGRES_DB}?schema=public"

# Application Configuration
NODE_ENV=development
ENVIRONMENT=development
PORT=3001
FRONTEND_URL=http://localhost:3000
# Backend URL for self-referential API calls (important for Docker)
# In Docker: http://backend:3001
# In development: http://localhost:3001
BACKEND_URL=http://localhost:3001

# JWT Configuration
JWT_SECRET=your-super-secret-key-here-minimum-32chars


AZURE_CLIENT_ID=clientid                                                                                       
AZURE_TENANT_ID=tenantid


# Developer accounts that bypass strict Azure AD tenant validation
# Comma-separated list of email addresses
# These accounts still require valid Microsoft tokens but don't need to be in your tenant
# DEVELOPER_EMAILS=developer1@gmail.com,developer2@outlook.com

OPENAI_API_KEY=sk-proj-1234567890
OPENAI_COMPLETION_MODEL=gpt-4.1

#Developer accounts that bypass strict Azure AD tenant validation
# These accounts still require valid Microsoft tokens but don't need to be in the esedu.fi tenant
DEVELOPER_EMAILS=youremail@gmail.com

